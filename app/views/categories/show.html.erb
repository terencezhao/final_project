<div class="page-header">
  <h3><%= @category.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <div class="btn-group btn-group-justified">
      <a href="/categories" class="btn btn-primary">
        Back
      </a>
      <a href="/categories/<%= @category.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_category/<%= @category.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<h3>Highest Rated Products in the <%= @category.name %> Category</h3>
<ul class="list-group">
<% @products_sorted_by_review.each_with_index do |sorted_product, index| %>
  <li class="list-group-item">#<%= index+1 %> <%= sorted_product.name %></li>
<% end %>
</ul>

<h3>Most Recommended Products in the <%= @category.name %> Category</h3>
<ul class="list-group">
  <% @products_sorted_by_recommendation.each_with_index do |sorted_product, index| %>
    <li class="list-group-item">#<%= index+1 %> <%= sorted_product.name %></li>
  <% end %>
</ul>
