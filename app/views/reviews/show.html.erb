<div class="page-header">
  <h3>Review #<%= @review.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @review.user_id %></dd>

      <dt>Product</dt>
      <dd><%= @review.product_id %></dd>

      <dt>Quality</dt>
      <dd><%= @review.quality %></dd>

      <dt>Value</dt>
      <dd><%= @review.value %></dd>

      <dt>Style</dt>
      <dd><%= @review.style %></dd>

      <dt>Utility</dt>
      <dd><%= @review.utility %></dd>

      <dt>Enjoyment</dt>
      <dd><%= @review.enjoyment %></dd>

      <dt>Recommend</dt>
      <dd><%= @review.recommend %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reviews" class="btn btn-primary">
        Back
      </a>
      <a href="/reviews/<%= @review.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_review/<%= @review.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
